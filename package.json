{
  "name": "@entrolytics/react-sdk",
  "version": "2.0.0",
  "description": "React SDK for Entrolytics - First-party growth analytics with Web Vitals and Form tracking",
  "keywords": [
    "entrolytics",
    "analytics",
    "react",
    "web-analytics",
    "tracking",
    "spa",
    "web-vitals",
    "form-analytics"
  ],
  "author": "Entrolytics <hey@ng.entrolytics.click>",
  "license": "MIT",
  "homepage": "https://ng.entrolytics.click",
  "repository": {
    "type": "git",
    "url": "https://github.com/entrolytics/react-sdk",
    "directory": "entro-react"
  },
  "bugs": {
    "url": "https://github.com/entrolytics/react-sdk/issues"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=24.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "web-vitals": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "web-vitals": "^5.1.0"
  }
}
